module choose(RqFlag2, RqFlag1, RqFlag0, r2, g2, b2, r1, g1, b1, r0, g0, b0, red, green, blue);
    input RqFlag0;
	input RqFlag1;
	input RqFlag2;
	input [7:0] r0,g0,b0;
	input [7:0] r1,g1,b1;
	input [7:0] r2,g2,b2;
	output reg [7:0] red,green,blue;
	always @(*)
	  case({RqFlag0,RqFlag1,RqFlag2})
	    3'b000: begin red=8'b00000000;green=8'b00000000;blue=8'b00000000;end
		3'b001: {red,green,blue}={r2,g2,b2};
		3'b010: {red,green,blue}={r1,g1,b1};
		3'b011: {red,green,blue}={r1,g1,b1};
		3'b100: {red,green,blue}={r0,g0,b0};
		3'b101: {red,green,blue}={r0,g0,b0};
		3'b110: {red,green,blue}={r0,g0,b0};
		3'b111: {red,green,blue}={r0,g0,b0};
	  endcase
endmodule
	